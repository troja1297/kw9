@using kw9.Areas.Identity.Pages.Account
@using Microsoft.AspNetCore.Identity

@inject SignInManager<RegisterModel.ApplicationUser> SignInManager
@inject UserManager<RegisterModel.ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">

            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Balance: @UserManager.GetUserAsync(User).Result.Balance KGS      </a>
            </li>
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserAsync(User).Result.Email!</a>
            </li>
            
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">You Identifacator: @UserManager.GetUserName(User) </a>
            </li>

            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}